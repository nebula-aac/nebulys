{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "version": "independent",
  "npmClient": "yarn",
  "ignoreChanges": [
    "CHANGELOG.md",
    "node_modules/**",
    "package.json",
    "*.md",
    ".github/**",
    "packages/**/.eslintrc.js",
    "packages/**/.gitignore"
  ],
  "command": {
    "version": {
      "createRelease": "github",
      "conventionalCommits": true,
      "allowBranch": [
        "main"
      ],
      "message": "chore(release): publish"
    }
  }
}
